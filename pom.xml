<project xmlns="http://maven.apache.org/POM/4.0.0">
    <groupId>org.jesperancinha.ssa</groupId>
    <artifactId>sea-shell-archiver-root</artifactId>
    <version>0.0.0-SNAPSHOT</version>
    <modules>
        <module>sea-shell-client</module>
        <module>sea-shell-model</module>
    </modules>
    <packaging>pom</packaging>

    <properties>
        <!-- Internal -->
        <sea-shell-client.version>0.0.0-SNAPSHOT</sea-shell-client.version>
        <sea-shell-model.version>0.0.0-SNAPSHOT</sea-shell-model.version>
        <sea-shell-service.version>0.0.0-SNAPSHOT</sea-shell-service.version>
        <!-- External -->
        <spring-boot-starter-webflux.version>2.2.0.RELEASE</spring-boot-starter-webflux.version>
        <lombok-maven-plugin.version>1.18.8.1</lombok-maven-plugin.version>
        <lombok.version>1.18.10</lombok.version>
        <netty-all.version>4.1.42.Final</netty-all.version>
        <blockhound.version>1.0.1.RELEASE</blockhound.version>
        <!-- Plugins -->
        <maven-compiler-plugin.source>11</maven-compiler-plugin.source>
        <maven-compiler-plugin.target>11</maven-compiler-plugin.target>
        <maven-compiler-plugin.version>3.8.1</maven-compiler-plugin.version>
        <!-- Test -->
        <junit-jupiter.version>5.5.1</junit-jupiter.version>
    </properties>

    <modelVersion>4.0.0</modelVersion>

    <dependencyManagement>
        <dependencies>
            <!-- Internal Dependencies -->
            <dependency>
                <groupId>org.jesperancinha.ssa</groupId>
                <artifactId>sea-shell-client</artifactId>
                <version>${sea-shell-client.version}</version>
            </dependency>
            <dependency>
                <groupId>org.jesperancinha.ssa</groupId>
                <artifactId>sea-shell-model</artifactId>
                <version>${sea-shell-model.version}</version>
            </dependency>
            <dependency>
                <groupId>org.jesperancinha.ssa</groupId>
                <artifactId>sea-shell-service</artifactId>
                <version>${sea-shell-service.version}</version>
            </dependency>
            <!-- External Dependencies -->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-webflux</artifactId>
                <version>${spring-boot-starter-webflux.version}</version>
            </dependency>
            <dependency>
                <groupId>io.projectreactor.tools</groupId>
                <artifactId>blockhound</artifactId>
                <version>${blockhound.version}</version>
            </dependency>
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>io.netty</groupId>
                <artifactId>netty-all</artifactId>
                <version>${netty-all.version}</version>
            </dependency>
            <!-- Test Dependencies -->
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter</artifactId>
                <version>${junit-jupiter.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>